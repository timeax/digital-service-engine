          "additionalProperties": {
            "$ref": "#/definitions/Ui"
          }
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "order": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "type",
        "fields"
      ],
      "description": "objects: nested props"
    },
