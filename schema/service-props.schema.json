                      "type": "string",
                      "enum": [
                        "value",
                        "length"
                      ]
                    },
                    "percentBase": {
                      "type": "string",
                      "enum": [
                        "service_total",
                        "base_service",
                        "all"
                      ]
                    },
                    "label": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "rate",
                    "mode"
                  ]
                },
                "quantity": {
                  "type": "object",
                  "properties": {
                    "valueBy": {
                      "type": "string",
                      "enum": [
                        "value",
                        "length",
                        "eval"
                      ]
                    },
                    "code": {
                      "type": "string"
                    },
                    "multiply": {
                      "type": "number"
                    },
                    "clamp": {
                      "type": "object",
                      "properties": {
                        "min": {
                          "type": "number"
                        },
                        "max": {
                          "type": "number"
                        }
                      }
                    },
                    "fallback": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "valueBy"
                  ]
                }
              }
