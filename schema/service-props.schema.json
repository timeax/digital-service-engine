{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ServiceProps",
  "definitions": {
    "ServiceProps": {
      "type": "object",
      "properties": {
        "order_for_tags": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "filters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Tag"
          }
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Field"
          }
        },
        "includes_for_options": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "excludes_for_options": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "schema_version": {
          "type": "string"
        },
        "fallbacks": {
          "$ref": "#/definitions/ServiceFallback"
        }
      },
      "required": [
        "filters",
        "fields"
      ]
    },
    "Tag": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "bind_id": {
          "type": "string"
        },
        "service_id": {
          "type": "number"
        },
        "includes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "excludes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "meta": {
          "type": "object",
          "properties": {
            "quantityDefault": {
              "type": "number"
            }
          }
        },
        "constraints": {
          "type": "object",
          "properties": {
            "refill": {
              "type": "boolean"
            },
            "cancel": {
              "type": "boolean"
            },
            "dripfeed": {
              "type": "boolean"
            }
          },
          "description": "Which flags are set for this tag. If a flag is not set, it's inherited from the nearest ancestor with a value set."
        },
        "constraints_origin": {
          "type": "object",
          "properties": {
            "refill": {
              "type": "string"
            },
            "cancel": {
              "type": "string"
            },
            "dripfeed": {
              "type": "string"
            }
          },
          "description": "Which ancestor defined the *effective* value for each flag (nearest source)."
        },
        "constraints_overrides": {
          "type": "object",
          "properties": {
            "refill": {
              "type": "object",
              "properties": {
                "from": {
                  "type": "boolean"
                },
                "to": {
                  "type": "boolean"
                },
                "origin": {
                  "type": "string"
                }
              },
              "required": [
                "from",
                "to",
                "origin"
              ]
            },
            "cancel": {
              "type": "object",
              "properties": {
                "from": {
                  "type": "boolean"
                },
                "to": {
                  "type": "boolean"
                },
                "origin": {
                  "type": "string"
                }
              },
              "required": [
                "from",
                "to",
                "origin"
              ]
            },
            "dripfeed": {
              "type": "object",
              "properties": {
                "from": {
                  "type": "boolean"
                },
                "to": {
                  "type": "boolean"
                },
                "origin": {
                  "type": "string"
                }
              },
              "required": [
                "from",
                "to",
                "origin"
              ]
            }
          },
          "description": "Present only when a child explicitly set a different value but was overridden by an ancestor during normalisation."
        }
      },
      "required": [
        "id",
        "label"
      ]
    },
    "Field": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/FieldType"
        },
        "bind_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FieldOption"
          }
        },
        "component": {
          "type": "string"
        },
        "pricing_role": {
          "$ref": "#/definitions/PricingRole"
        },
        "meta": {
          "type": "object",
          "properties": {
            "utility": {
              "type": "object",
              "properties": {
                "rate": {
                  "type": "number"
                },
                "mode": {
                  "type": "string",
                  "enum": [
                    "flat",
                    "per_quantity",
                    "per_value",
                    "percent"
                  ]
                },
                "valueBy": {
                  "type": "string",
                  "enum": [
                    "value",
                    "length"
                  ]
                },
                "percentBase": {
                  "type": "string",
                  "enum": [
                    "service_total",
                    "base_service",
                    "all"
                  ]
                },
                "label": {
                  "type": "string"
                }
              },
              "required": [
                "rate",
                "mode"
              ]
            },
            "quantity": {
              "type": "object",
              "properties": {
                "valueBy": {
                  "type": "string",
                  "enum": [
                    "value",
                    "length",
                    "eval"
                  ]
                },
                "code": {
                  "type": "string"
                },
                "multiply": {
                  "type": "number"
                },
                "clamp": {
                  "type": "object",
                  "properties": {
                    "min": {
                      "type": "number"
                    },
                    "max": {
                      "type": "number"
                    }
                  }
                },
                "fallback": {
                  "type": "number"
                }
              },
              "required": [
                "valueBy"
              ]
            }
          }
        },
        "helperText": {
          "type": "string"
        },
        "helperTextPos": {
          "type": "string"
        },
        "placeholder": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "labelClassName": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "axis": {
          "type": "string",
          "enum": [
            "y",
            "x"
          ]
        },
        "labelAxis": {
          "type": "string",
          "enum": [
            "x",
            "y"
          ]
        },
        "extra": {}
      },
      "required": [
        "id",
        "label",
        "type"
      ]
    },
    "FieldType": {
      "type": "string"
    },
    "FieldOption": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "value": {
          "type": [
            "string",
            "number"
          ]
        },
        "service_id": {
          "type": "number"
        },
        "pricing_role": {
          "$ref": "#/definitions/PricingRole"
        },
        "meta": {
          "type": "object",
          "properties": {
            "quantityDefault": {
              "type": "number"
            },
            "utility": {
              "type": "object",
              "properties": {
                "rate": {
                  "type": "number"
                },
                "mode": {
                  "type": "string",
                  "enum": [
                    "flat",
                    "per_quantity",
                    "per_value",
                    "percent"
                  ]
                },
                "valueBy": {
                  "type": "string",
                  "enum": [
                    "value",
                    "length"
                  ]
                },
                "percentBase": {
                  "type": "string",
                  "enum": [
                    "service_total",
                    "base_service",
                    "all"
                  ]
                },
                "label": {
                  "type": "string"
                }
              },
              "required": [
                "rate",
                "mode"
              ]
            }
          }
        }
      },
      "required": [
        "id",
        "label"
      ]
    },
    "PricingRole": {
      "type": "string",
      "enum": [
        "base",
        "utility"
      ]
    },
    "ServiceFallback": {
      "type": "object",
      "properties": {
        "nodes": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/ServiceIdRef"
            }
          },
          "description": "Node-scoped fallbacks: prefer these when that node’s primary service fails"
        },
        "global": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/ServiceIdRef"
            }
          },
          "description": "Primary→fallback list used when no node-scoped entry is present"
        }
      }
    },
    "ServiceIdRef": {
      "type": [
        "number",
        "string"
      ]
    }
  }
}